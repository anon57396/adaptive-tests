{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./lib",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./types",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@adaptive-tests/typescript": [
        "./types/index.d.ts"
      ],
      "@adaptive-tests/typescript/*": [
        "./src/*"
      ],
      "@adaptive-tests/javascript": [
        "../javascript/src/index.js"
      ],
      "@adaptive-tests/javascript/*": [
        "../javascript/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}